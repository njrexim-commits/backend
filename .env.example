# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=5000
NODE_ENV=development

# Database - Use MongoDB Atlas for production/Vercel
# Local: mongodb://localhost:27017/njr_exim
# Atlas: mongodb+srv://username:password@cluster.xxxxx.mongodb.net/njr_exim
MONGODB_URI=mongodb://localhost:27017/njr_exim

# Frontend URL - Update for production
# Local: http://localhost:5173
# Production: https://your-frontend.vercel.app
# Multiple domains: https://www.njrexim.com,https://njrexim.com
CLIENT_URL=http://localhost:5173

# Security - Generate a strong random string for production
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_EXPIRE=30d

# Cloudinary Configuration (Optional - for image uploads)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Vercel Detection (automatically set by Vercel, don't add manually)
# VERCEL=1

# Email Configuration (Microsoft 365 / Outlook Example)
# Host: smtp.office365.com (or smtp-mail.outlook.com)
# Port: 587
# Secure: false (STARTTLS)
SMTP_HOST=smtp.office365.com
SMTP_PORT=587
SMTP_EMAIL=your_email@company.com
SMTP_PASSWORD=your_password
FROM_EMAIL=your_email@company.com
FROM_NAME="NJR EXIM Admin"
